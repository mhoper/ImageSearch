<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <android.support.v4.view.ViewPager
        android:id="@+id/imageViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/imageShowButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/transparentblack"
        android:visibility="gone" >
        
        <ImageView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onBack"
            android:src="@drawable/back_btn"
            android:contentDescription="@string/content_back" />
        
        <ImageView
            android:id="@+id/downloadImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right|center_vertical"
            android:clickable="true"
            android:onClick="onDownloadIamge"
            android:src="@drawable/download_btn"
            android:contentDescription="@string/content_download" />
        
        <ImageView
            android:id="@+id/setWallpaper"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onSetWallpaper"
            android:src="@drawable/ic_action_picture"
            android:contentDescription="@string/content_wallpaper" />
        
        <ImageView
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onShare"
            android:src="@drawable/ic_action_share"
            android:contentDescription="@string/content_share" />
        
    </LinearLayout>
    
</FrameLayout>
